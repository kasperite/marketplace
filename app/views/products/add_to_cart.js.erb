var cart = document.getElementById("cart");
var total = document.getElementById("total");
var discount = document.getElementById("discount");
cart.innerHTML = "";
total.innerHTML = "";
<% @cart.carts_products.each do |cart_product| %>
  var el = document.createElement("li");
  el.innerHTML = "<%= j render_cart_product(cart_product) %>";
  cart.append(el);
<% end %>
<% if @calculator.promotion %>
  discount.innerHTML = "<%= j @calculator.promotion.description %>";
<% else %>
  discount.innerHTML = ""
<% end %>
total.innerHTML = "TOTAL: <%= j to_dollars(@calculator.total) %>";
